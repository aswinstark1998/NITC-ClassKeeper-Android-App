<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_specific_room"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="10dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_recycler_slot"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:background="#FFEB3B"
            android:gravity="center"
            android:padding="10dp"
            android:text="8 - 9 am"
            android:textSize="33sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/txt_teacherName_specific_room_slot_booking"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="0.3"
                android:background="#1FE5EC"
                android:gravity="center"
                android:text="Aswin A"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_subject"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.3"
                android:background="#F099E5"
                android:gravity="center"
                android:text="SUBJECT"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/txt_booking_status"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.4"
                android:background="#40F321"
                android:gravity="center"
                android:text="BOOKED"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>